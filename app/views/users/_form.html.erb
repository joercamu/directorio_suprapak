<%= form_for(@user) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.text_field :name, class:"form-control input-lg top-space",placeholder:"Nombre Completo" %>
  </div>
  <div class="field">
    <%= f.file_field :cover, class:"form-control top-space" %>
  </div>
  <div class="field">
    <%= f.email_field :email, class:"form-control top-space",placeholder:"Email" %>
  </div>
  <div class="field">
    <%= f.text_field :office, class:"form-control top-space",placeholder:"Cargo" %>
  </div>
  <div class="field">
    <%= f.text_field :ext, class:"form-control top-space",placeholder:"Extension" %>
  </div>
  <div class="field">
    <%= f.text_field :phone, class:"form-control top-space",placeholder:"Numero de contacto movil" %>
  </div>
  <div class="field">
    <%= f.select(:departament_id, @departaments.map { |d| [d.name, d.id]}, {}, {:class => "form-control top-space"})%>
    <%= link_to "Crear Departamento", new_departament_path %>
  </div>
  <div class="actions">
    <%= f.submit button_name, :class => 'btn btn-success' %>
    
  </div>
<% end %>
